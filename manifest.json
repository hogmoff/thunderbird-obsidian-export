{
  "manifest_version": 2,
  "name": "Obsidian Export",
  "description": "__MSG_extensionDescription__",
  "version": "0.1",
  "author": "Christian Ott",
  "homepage_url": "https://github.com/tbd",
  "applications": {
    "gecko": {
      "id": "obsidian-export@christian.ott",
      "strict_min_version": "88.0",
      "strict_max_version": "117.*"
    }
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "browser_action": {
    "default_title": "Obsidian Export",
    "default_icon": "images/obsidian-icon.png"
  },
  "commands": {
    "export_to_obsidian": {
      "suggested_key": {
        "default": "Ctrl+Alt+O"
      },
      "description": "Export emails by hotkey."
    }
  },
  "options_ui": {
    "page": "dist/options.html"
  },
  "permissions": ["menus", "messagesRead", "notifications", "storage"],
  "icons": {
    "96": "images/obsidian-icon.png"
  },
  "default_locale": "en_US",
  "experiment_apis": {
    "helper": {
      "schema": "dist/helper.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["helper"]],
        "script": "dist/helper.js"
      }
    }
  }
}
